<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/activity_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="lice.android.MainActivity"
		android:orientation="vertical">

	<Button
			android:text="@string/clear_screen"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/clear_screen"/>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/code_output" android:textAppearance="@android:style/TextAppearance" android:autoLink="web|email|phone|map|all"
			android:allowUndo="true"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:ignore="TextFields"
			android:id="@+id/code_input"/>
</LinearLayout>
